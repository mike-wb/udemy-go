{{template "base" .}}

{{define "page-name"}}Make Reservation - Smythe Bed and Breakfast{{end}}

{{define "content"}}
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <h1 class="text-center mt-5">Make Reservation</h1>
            <form action="/make-reservation" method="get">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="start_date" class="form-label">Starting Date</label>
                            <input name="start_date" type="date" required class="form-control" id="start_date"
                                aria-describedby="startDateHelp">
                            <div id="startDateHelp" class="form-text">Enter your start date in the form of
                                YYYY-MM-DD.
                            </div>
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="end_date" class="form-label">Ending Date</label>
                            <input name="end_date" type="date" required class="form-control" id="end_date"
                                aria-describedby="endDateHelp">
                            <div id="endDateHelp" class="form-text">Enter your ending date in the form of
                                YYYY-MM-DD.
                            </div>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col text-center">
            <a href="/make-reservation" class="btn btn-success">Make Reservation Now!</a>
        </div>
    </div>
</div>
{{end}}